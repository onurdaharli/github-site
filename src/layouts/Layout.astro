---
import { ViewTransitions } from 'astro:transitions';
import Analytics from '../components/Analytics.astro';

interface Props {
  title: string;
  description?: string;
}

const { 
  title, 
  description = "Onur Daharlı - Full Stack Developer & AI Builder. Kompleks problemleri etkileyici dijital deneyimlere dönüştürüyorum." 
} = Astro.props;
---

<!doctype html>
<html lang="tr" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- PWA Manifest -->
    <link rel="manifest" href="/manifest.json" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="apple-mobile-web-app-title" content="Onur Daharlı" />
    <link rel="apple-touch-icon" href="/icon-192.png" />
    
    <!-- Theme Color -->
    <meta name="theme-color" content="#14b8a6" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://onurdaharli.com/" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://onurdaharli.com/assets/1730375902348.jpeg" />
    <meta property="og:locale" content="tr_TR" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://onurdaharli.com/" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content="https://onurdaharli.com/assets/1730375902348.jpeg" />
    <meta property="twitter:creator" content="@onurdaharli" />
    
    <!-- Performance: Preconnect & DNS Prefetch -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="dns-prefetch" href="https://fonts.googleapis.com" />
    
    <!-- Fonts: Optimized loading -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet" />
    
    <title>{title}</title>
    
    <!-- View Transitions -->
    <ViewTransitions />
    
    <script is:inline>
      // Dark mode support
      if (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
        document.documentElement.classList.add('dark')
      }
      
      // PWA Service Worker Registration
      if ('serviceWorker' in navigator) {
        window.addEventListener('load', () => {
          navigator.serviceWorker.register('/sw.js').catch(() => {});
        });
      }
    </script>
  </head>
  <body class="antialiased animated-gradient">
    <slot />
    <Analytics />
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>
